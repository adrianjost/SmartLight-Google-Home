{
	"name": "smartlight-api",
	"author": "Adrian Jost",
	"version": "0.0.1",
	"license": "MIT",
	"description": "SmartLight V3 API Cloud Functions",
	"engines": {
		"node": "10"
	},
	"scripts": {
		"lint": "run-s lint:*",
		"lint:eslint": "eslint . --fix",
		"lint:prettier": "prettier --write -c \"**/*.{js,json,md}\"",
		"serve": "firebase functions:config:get > .runtimeconfig.json && firebase serve --only functions",
		"shell": "firebase functions:config:get > .runtimeconfig.json && firebase experimental:functions:shell",
		"deploy:token": "firebase deploy --only functions:token",
		"deploy:authorize": "firebase deploy --only functions:authorize",
		"deploy:authentication": "firebase deploy --only functions:authentication",
		"deploy:GoogleHome": "firebase deploy --only functions:GoogleHome",
		"deploy": "concurrently \"npm:deploy:*\""
	},
	"dependencies": {
		"@adrianjost/oauth2-firebase": "^0.1.19",
		"array.prototype.flat": "^1.2.3",
		"camelcase": "^5.3.1",
		"color": "^3.1.2",
		"color-name-list": "^4.11.0",
		"firebase-admin": "^8.9.0",
		"firebase-functions": "^3.3.0",
		"glob": "^7.1.6",
		"object.fromentries": "^2.0.2",
		"restana": "^4.0.3"
	},
	"devDependencies": {
		"concurrently": "^5.0.2",
		"eslint": "^6.8.0",
		"eslint-plugin-promise": "^4.2.1",
		"husky": "^4.0.6",
		"lint-staged": "^9.5.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"yorkie": "^2.0.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,css,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.js": [
			"eslint --fix",
			"git add"
		]
	}
}
